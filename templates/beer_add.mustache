                <input type="date" name="purchasedate" id="purchasedate"   />
			</div>
	        <div id="pricediv" data-role="fieldcontain">
	        	<label for="price">Price:</label>
	        	<input type="text" name="price">
	        </div>
	        <div id="cellardatediv" data-role="fieldcontain">
    	    	<label for="cellardate">Cellar Date</label>
    	    	<input type="date" name="cellardate" id="cellardate"  />
			</div>
    	    <div id="cellartempdiv" data-role"fieldcontain">
    	    	<label for="cellartemp">Cellar Temperature:</label>
    	    	<input type="text" name="cellartemp" />
    	    </div>
	        <div id="brewdatediv" data-role="fieldcontain">
    	    	<label for="brewdate">Brew Date</label>
    	    	<input type="date" name="brewdate" id="brewdate"  />
	        </div>
			<a href="#pintley">This beer on Pintely</a><br />
