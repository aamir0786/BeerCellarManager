<form id="beerform" action="#" method="post">
			<div id="beernamediv" data-role="fieldcontain">
				<label for="beername">Beer Name:</label>
				<input type="text" name="beername" />
            </div>	
	        <div id="brewernamediv" data-role="fieldcontain">
	        	<label for="brewername">Brewer Name:</label>
				<input type="text" name="brewername" />
	        </div>
	        <div id="brewerlocationdiv" data-role="fieldcontain">
	        	<label for="brewerlocation">Brewer Location:</label>
				<input type="text" name="brewerlocation" />
	        </div>
	        <div id="beerstylediv" data-role="fieldcontain">
	        	<label for="beerstyle">Beer Style:</label>
				<input type="text" name="beerstyle" />
	        </div>
			<hr>
	        <div id="quantitydiv" data-role="fieldcontain">
				<label for="quantity">Quantity: </label>
				<input type="range" name="quantity" id="quantity" value="0" min="0" max="25"  />
